# Docker Dev-Box Environment Configuration
# Copy this file to .env and modify the values as needed

# Docker group GID - IMPORTANT for Docker socket access
# Get your host's docker group GID with: getent group docker | cut -d: -f3
HOST_DOCKER_GID=988

# Container timezone (optional)
TZ=UTC

# Architecture for multi-arch builds (optional)
# Options: amd64, arm64, linux/amd64, linux/arm64
ARCH=amd64

# Registry for pushing images (optional)
# REGISTRY=your-registry.com

# Additional environment variables for the container
# ADDITIONAL_ENV_VAR=value

# Build arguments (optional)
# BUILD_ARGS=--no-cache

# Development flags
COMPOSE_BAKE=true
